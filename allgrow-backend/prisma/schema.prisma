datasource db {
  url      = env("DATABASE_URL")
  provider = "mysql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String            @id @default(uuid())
  name            String
  email           String            @unique
  password        String
  solvedQuestions SolvedQuestions[] @relation("UserSolved")
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}

model Questions {
  id              String            @id @default(uuid())
  title           String            @unique
  description     String
  input_format    String
  output_format   String
  sample_input    String
  sample_output   String
  test_cases      Json
  difficulty      String
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  solvedQuestions SolvedQuestions[] @relation("QuestionSolved")
}

model SolvedQuestions {
  id         String    @id @default(uuid())
  userId     String
  questionId String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  user       User      @relation("UserSolved", fields: [userId], references: [id])
  question   Questions @relation("QuestionSolved", fields: [questionId], references: [id])

  @@unique([userId, questionId])
}
